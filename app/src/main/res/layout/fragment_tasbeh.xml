<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img_islami">

    <ImageView
        android:id="@+id/imv_sebha_head"
        android:layout_width="73dp"
        android:layout_height="105dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/sebha_head"
        app:layout_constraintEnd_toEndOf="@id/imv_sebha_body"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/imv_sebha_body"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_sebha_body"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sebha_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/imv_sebha_head"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_tesbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عدد التسبيحات"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imv_sebha_body" />

    <TextView
        android:id="@+id/tv_tasbeh_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_tesbeh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="34dp"
        android:text="0"
        android:textColor="@color/black"
        android:padding="16dp"
        android:textSize="25sp"
        android:background="@drawable/textview_background_rounded"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_tasbeh_count"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:text="سبحان الله "
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tasbeh_count" />





</androidx.constraintlayout.widget.ConstraintLayout>